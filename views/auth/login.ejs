<script type="text/javascript">
setTimeout(function sunrise () {
    document.getElementsByClassName('header')[0].style.backgroundColor = '#118798';
}, 0);
</script>

<div class="default-page">
    <div class="header">
        <h1 id="main-title" class="container"><%= __('Login') %></h1>
        <h3 class="container"></h3>
    </div>

    <div class="main container clearfix">
        
          <% if (errors) {%>
              <% errors.forEach(function (error) { %>
                <div class="alert alert-warning"><%= __(error) %></div>
              <% }) %>
          <% } %>

          <form role="form" action="/auth/local" method="post">
              <div class="form-group">
                  <label for="email">Username or Email</label>
                  <input type="text" name="identifier" class="form-control" id="email">
              </div>

              <div class="form-group">
                  <label for="pwd">Password:</label>
                  <input type="password" name="password" class="form-control" id="pwd">
              </div>

              <button type="submit" class="btn btn-default">Submit</button>
              or <a href="/register">Register</a>
          </form>

          <% if (Object.keys(providers).length) {%>
            <h4>You can also use one of these...</h4>

            <% Object.keys(providers).forEach(function (key) { %>
              <a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
            <% }) %>
          <% } %>
    </div>
</div>









