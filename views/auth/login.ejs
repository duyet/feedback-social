<main>
  <section id="login-form">
      <div class="container inner">
          <div class="row">
              <div class="col-md-8 col-sm-9 center-block text-center animated">
                  <header>
                      <h1 id="main-title" class="container"><%= __('Login') %></h1>
                      <p>Do you want to know more? Weâ€™d love to hear from you!</p>
                  </header>
              </div>
              <!-- /.col -->
          </div>
          <!-- /.row -->
          <div class="row">
              <div class="col-sm-12">
                  <div class="row">
                      <div class="col-sm-6 outer-top-md inner-right-sm">
                          <h2><%= __('Login') %></h2>
                          <form role="form" action="/auth/local" class="forms" method="post">
                              <div class="row">
                                <% if (errors) {%>
                                    <% errors.forEach(function (error) { %>
                                      <div class="alert alert-danger"><%= __(error) %></div>
                                    <% }) %>
                                <% } %>
                              </div>
                              <div class="row">
                                  <div class="col-sm-8 animated">
                                      <input type="text" name="email" class="form-control" placeholder="Email">
                                  </div>
                                  <!-- /.col -->
                              </div>
                              <!-- /.row -->
                              <div class="row">
                                  <div class="col-sm-8 animated">
                                      <input type="password" name="password" class="form-control" placeholder="Password">
                                  </div>
                                  <!-- /.col -->
                              </div>
                              <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                              <button type="submit" class="btn btn-default btn-submit">Submit</button>
                          </form>
                          <div id="response"></div>
                      </div>
                      <!-- ./col -->
                      <div class="col-sm-6 outer-top-md inner-left-sm border-left animated">
                          <h2><%= __('Register') %></h2> <%= __('Do not have account?') %> <a href="/register" class="btn"><%= __('Register') %></a>


 
                          <!-- /.contacts -->
                          <div class="social-network">
                              <h3>Social</h3>
                              <ul class="social">
                                  <li><a href="#"><i class="icon-s-facebook"></i></a></li>
                                  <li><a href="#"><i class="icon-s-gplus"></i></a></li>
                                  <li><a href="#"><i class="icon-s-twitter"></i></a></li>
                              </ul>
                              <!-- /.social -->
                          </div>
                          <!-- /.social-network -->

                          <p><%= __('Back to homepage') %></p>
                      </div>
                      <!-- /.col -->
                  </div>
                  <!-- /.row -->
              </div>
              <!-- /.col -->
          </div>
          <!-- /.row -->
      </div>
      <!-- /.container -->
  </section>
</main>
